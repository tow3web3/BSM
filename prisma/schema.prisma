generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Message {
  id          String   @id @default(cuid())
  fromWallet  String   @map("from_wallet")
  toWallet    String   @map("to_wallet")
  ciphertext  String
  nonce       String
  ephPub      String   @map("eph_pub")
  createdAt   DateTime @default(now()) @map("created_at")
  
  @@map("messages")
}

model Contact {
  id          String   @id @default(cuid())
  ownerWallet String   @map("owner_wallet")
  address     String
  name        String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@unique([ownerWallet, address])
  @@map("contacts")
}

model User {
  id              String   @id @default(cuid())
  walletAddress   String   @unique @map("wallet_address")
  telegramChatId  String?  @unique @map("telegram_chat_id")
  telegramUsername String? @map("telegram_username")
  notificationsEnabled Boolean @default(true) @map("notifications_enabled")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  @@map("users")
}

model TelegramVerification {
  id              String   @id @default(cuid())
  code            String   @unique @map("verification_code")
  telegramChatId  String   @map("telegram_chat_id")
  telegramUsername String? @map("telegram_username")
  used            Boolean  @default(false)
  expiresAt       DateTime @map("expires_at")
  createdAt       DateTime @default(now()) @map("created_at")
  
  @@map("telegram_verifications")
}
