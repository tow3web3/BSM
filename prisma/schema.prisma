generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Message {
  id          String   @id @default(cuid())
  fromWallet  String   @map("from_wallet")
  toWallet    String   @map("to_wallet")
  ciphertext  String
  nonce       String
  ephPub      String   @map("eph_pub")
  createdAt   DateTime @default(now()) @map("created_at")
  
  @@map("messages")
}
